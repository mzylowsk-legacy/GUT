<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="horizontal"
android:baselineAligned="false"
tools:context=".SensorMakerActivity" >

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnCapturePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zrób zdjęcie"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnSetAzimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustaw azymut"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnSetCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustaw współrzędne"
        android:layout_marginBottom="10dp"/>

</LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Podgląd"
        android:padding="10dp"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Azymut:"
        android:padding="10dp"
        android:textSize="15dp"
        android:id="@+id/azimuth_description" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:padding="10dp"
        android:textSize="15dp"
        android:id="@+id/azimuth" />

</LinearLayout>

</LinearLayout>